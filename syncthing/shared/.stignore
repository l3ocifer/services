# === DIRECTORIES TO EXCLUDE ===
# Large system directories
/var/log/
/tmp/
/proc/
/sys/
/dev/

# Package manager caches
/var/cache/
~/.cache/
~/Library/Caches/

# Application data that shouldn't sync
~/Library/Application Support/
~/.local/share/

# Conda/Python environments (too large)
~/miniconda3/envs/
~/miniconda3/pkgs/
~/anaconda3/envs/
~/anaconda3/pkgs/
