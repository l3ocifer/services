{
  "terminal.integrated.scrollback": 9999,
  "terminal.integrated.fontFamily": "{{ terminal_font | default('JetBrains Mono') }}",
  "terminal.integrated.fontSize": {{ terminal_font_size | default(14) }},
  "editor.fontFamily": "{{ editor_font | default('JetBrains Mono') }}",
  "editor.fontSize": {{ editor_font_size | default(14) }},
  "telemetry.telemetryLevel": "off",
  "update.mode": "manual",
  "security.workspace.trust.enabled": false,
  "editor.minimap.enabled": false,
  "vim.useSystemClipboard": true
}
